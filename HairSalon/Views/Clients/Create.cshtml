@{
  Layout = "_Layout";
}
@model HairSalon.Models.Client

<h1> Add a new Client </h1>
@using (Html.BeginForm())
{
  <div class="form-group">
    @Html.LabelFor(model => model.FirstName)
    @Html.TextBoxFor(model => model.FirstName, new { type = "text", placeholder = "Sam", required = "required", @class = "form-control" })
  </div>
  
  <div class="form-group">
    @Html.LabelFor(model => model.LastName)
    @Html.TextBoxFor(model => model.LastName, new { type = "text", placeholder = "Montana", required = "required", @class = "form-control" })
  </div>

  <div class="form-group">
    @Html.LabelFor(model => model.Extrovert)
    @Html.RadioButton("Extrovert", true) Yes 
    @Html.RadioButton("Extrovert", false) No 
  </div>

  <div class="form-group">
    @Html.LabelFor(model => model.Stylist)
    @Html.DropDownList("stylistId")
  </div>

  <div class="left-container">
    <input type="submit" class="btn btn-success" value="Add new Stylist" />
  </div>
  
}

<div class="right-container edit-page">
  <p>@Html.ActionLink("View all Stylists", "Index", "Stylists", null, new { @class = "btn btn-info" })</p>
</div>
