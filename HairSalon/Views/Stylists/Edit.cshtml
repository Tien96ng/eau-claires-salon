@using HairSalon.Models;
@model HairSalon.Models.Stylist
@{
  Layout = "_Layout";
}

<h1> Edit Selected Cuisine: @Html.DisplayFor(model => model.FirstName)</h1>

@using (Html.BeginForm())
{
  @Html.HiddenFor(model => model.StylistId)

  <div class="form-group">
    @Html.LabelFor(model => model.FirstName)
    @Html.TextBoxFor(model => model.FirstName, new { type = "text", placeholder = "Bob", required = "required", @class = "form-control" })
  </div>
  
  <div class="form-group">
    @Html.LabelFor(model => model.LastName)
    @Html.TextBoxFor(model => model.LastName, new { type = "text", placeholder = "Johnson", required = "required", @class = "form-control" })
  </div>

  <div class="form-group">
    @Html.LabelFor(model => model.Email)
    @Html.TextBoxFor(model => model.Email, new { type = "email", placeholder = "bob@gmail.com", required = "required", @class = "form-control" })
  </div>

  <div class="form-group">
    @Html.LabelFor(model => model.YearsOfExperience)
    @Html.TextBoxFor(model => model.YearsOfExperience, new { type = "number", min = "1", max = "20", placeholder = "10", required = "required", @class = "form-control" })
  </div>

  <input type="submit" class="btn btn-success" value="Update" />
}

<p>@Html.ActionLink($"Go Back to {@Model.FirstName}'s Profile", "Details", new { stylistId = @Model.StylistId }, new { @class = "btn btn-success" })</p>
<p>@Html.ActionLink("Back - View all Stylists", "Index", "Stylists", null, new { @class = "btn btn-info" })</p>